{
  "name": "zodock",
  "type": "module",
  "version": "1.0.0",
  "description": "A library for generating mock data based on Zod schemas",
  "author": "ItMaga <m-chemurziev@ya.ru>",
  "license": "MIT",
  "homepage": "https://github.com/ItMaga/zodock#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ItMaga/zodock.git"
  },
  "bugs": "https://github.com/ItMaga/zodock/issues",
  "keywords": [
    "zod",
    "mock",
    "faker",
    "fixture"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "yarn build",
    "release": "bumpp && yarn publish",
    "test": "vitest --reporter verbose",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "zod": ">=3.25.0"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.38.4",
    "@types/node": "^18.15.11",
    "bumpp": "^9.1.0",
    "eslint": "^8.37.0",
    "lint-staged": "^13.2.0",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.8.3",
    "unbuild": "^2.0.0",
    "vite": "^4.2.1",
    "vitest": "^0.29.8",
    "zod": "^3.25.74"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
